<h1>Create a new Post</h1>

<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %><br>
  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.label "Enter A New Category" %>
  <%= f.fields_for :categories, post.categories.build do |category_fields| %>
    <%= category_fields.text_field :name %><br>
  <% end %>
  <%= f.submit %>
<% end %>
